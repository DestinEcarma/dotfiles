{
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "positionX": "right",
    "positionY": "top",
    "cssPriority": "user",

    "control-center-width": 380,
    "control-center-margin-top": 0,
    "control-center-margin-bottom": 0,
    "control-center-margin-right": 0,
    "control-center-margin-left": 0,

    "notification-window-width": 400,
    "notification-icon-size": 48,
    "notification-body-image-height": 160,
    "notification-body-image-width": 200,

    "timeout": 4,
    "timeout-low": 2,
    "timeout-critical": 6,

    "fit-to-screen": true,
    "keyboard-shortcuts": true,
    "image-visibility": "when-available",
    "transition-time": 200,
    "hide-on-clear": false,
    "hide-on-action": false,
    "script-fail-notify": true,
    "widgets": ["buttons-grid", "mpris", "title", "notifications"],
    "widget-config": {
        "title": {
            "text": "Notifications",
            "clear-all-button": true,
            "button-text": "󰎟"
        },
        "mpris": {
            "image-size": 96,
            "image-radius": 10
        },
        "buttons-grid": {
            "actions": [
                {
                    "label": "󰟎",
                    "type": "toggle",
                    "active": false,
                    "command": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
                    "update-command": "wpctl inspect @DEFAULT_AUDIO_SINK@ | grep -q 'muted: true' && echo false || echo true"
                },
                {
                    "label": "󰍭",
                    "type": "toggle",
                    "active": false,
                    "command": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
                    "update-command": "wpctl inspect @DEFAULT_AUDIO_SOURCE@ | grep -q 'muted: true' && echo false || echo true"
                },
                {
                    "label": "",
                    "command": "swaync-client -cp && kitty --class float --title impala -e impala"
                },
                {
                    "label": "󰂯",
                    "command": "swaync-client -cp && kitty --class float --title bluetui -e bluetui"
                },
                {
                    "label": "",
                    "type": "toggle",
                    "active": false,
                    "command": "swaync-client -d",
                    "update-command": "sh -c '[[ $(swaync-client -D) == \"true\" ]] && echo true || echo false'"
                }
            ]
        }
    }
}
